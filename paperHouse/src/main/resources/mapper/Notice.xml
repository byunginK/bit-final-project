<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.paperhouse.dao.NoticeRepository">

<select id="allList" resultType="com.bit.paperhouse.dto.NoticeDto">
    SELECT *FROM NOTICE
    ORDER BY NOTICE_SEQ DESC
</select>


<insert id="writeNoticeAf" parameterType="com.bit.paperhouse.dto.NoticeDto">
    INSERT INTO NOTICE(NOTICE_SEQ,TITLE,CONT,UPLOAD_DATE,FILE_ORIGINAL,FILE_SYSTEM,VIEWCOUNT,DEL)
    VALUES(NOTICE_SEQ.NEXTVAL,#{title},#{cont},SYSDATE,'null','null',0,0)
</insert>


    <delete id="deleteNotice" parameterType="com.bit.paperhouse.dto.NoticeDto">
    DELETE NOTICE
	SET DEL=1
	WHERE NOTICE_SEQ=#{seq}
    </delete>
</mapper>